<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- put common attributes and styles -->

    </style>

    <style name="Theme.MDFirst" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="textInputStyle">@style/MDFirstTextInputStyle</item>
        <item name="android:textViewStyle">@style/MDSecondTextViewStyle</item>

        <item name="textColorConnected">@android:color/holo_blue_bright</item>

        <!-- since API 26 -->
        <item name="android:windowSplashscreenContent">@drawable/splash_background_old</item>
    </style>

    <style name="Theme.MDSecond" parent="AppTheme">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@android:color/holo_orange_dark</item>
        <item name="colorPrimaryVariant">@android:color/darker_gray</item>

        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textColorConnected">@android:color/holo_blue_bright</item>
    </style>

    <style name="Theme.MDFirst.OldSplash">
        <item name="android:windowBackground">@drawable/splash_background_old</item>
    </style>
</resources>