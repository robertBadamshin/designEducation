    <style name="TextStyle.Medium.Blue">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextStyle.Medium.Blue.14sp">
        <item name="android:textSize">@dimen/font_size_medium</item>
    </style>
