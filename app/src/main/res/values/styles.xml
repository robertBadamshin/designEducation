<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MDFirstTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/teal_200</item>
    </style>


    <!-- show not working -->
    <style name="MDFirstErrorTextInput">
        <item name="android:textColor">@android:color/holo_orange_dark</item>
    </style>

    <style name="linkTextStyle">
        <!-- remove when using styling_texview -->
        <item name="android:textColor">@color/blue</item>
        <!-- remove when using styling_texview -->
        <item name="android:textSize">16sp</item>
        <!-- not recommend to use -->
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:letterSpacing">0.2</item>
    </style>

    <style name="MDSecondTextViewStyle" parent="android:Widget.TextView">
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="CollapsingToolbarTextAppearance" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StartingTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/holo_red_dark</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_animated_sun</item>
        <item name="windowSplashScreenAnimationDuration">5000</item>

        <item name="postSplashScreenTheme">@style/Theme.MDFirst</item>
    </style>

</resources>