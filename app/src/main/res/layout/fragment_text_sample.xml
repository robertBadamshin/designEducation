<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_view_title_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Regular Font text sample"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_title_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Bold Font text sample"
        android:textAppearance="@style/TextStyle.Bold.Blue.16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_title_regular" />

    <TextView
        android:id="@+id/text_view_spanned_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_title_bold" />

    <RadioGroup
        android:id="@+id/radio_group_span"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_spanned_text">

        <RadioButton
            android:id="@+id/radio_button_background_color_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BackgroundColorSpan" />

        <RadioButton
            android:id="@+id/radio_button_clickable_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClickableSpan" />

        <RadioButton
            android:id="@+id/radio_button_image_span"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ImageSpan" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_view_font_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:includeFontPadding="false"
        android:text="No Font Padding"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toStartOf="@id/text_view_no_font_padding"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/radio_group_span" />

    <TextView
        android:id="@+id/text_view_no_font_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/black"
        android:text="Font Padding"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_font_padding"
        app:layout_constraintTop_toBottomOf="@id/radio_group_span" />

    <TextView
        android:id="@+id/text_view_no_line_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/black"
        android:text="No Line Spacing \nNo Line Spacing"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toStartOf="@id/text_view_has_line_spacing"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_no_font_padding" />

    <TextView
        android:id="@+id/text_view_has_line_spacing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@color/black"
        android:lineSpacingExtra="5dp"
        android:text="Line Spacing\nLine Spacing"
        android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_no_line_spacing"
        app:layout_constraintTop_toTopOf="@id/text_view_no_line_spacing" />

    <FrameLayout
        android:id="@+id/container_text_view_parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_has_line_spacing">

        <TextView
            android:layout_width="wrap_content"
            app:firstBaselineToTopHeight="30dp"
            app:lastBaselineToBottomHeight="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@color/black"
            android:text="MyTextBaseLineSample"
            android:textAppearance="@style/TextStyle.Regular.Blue.16sp"
            app:layout_constraintEnd_toStartOf="@id/text_view_has_line_spacing"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_no_font_padding" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>